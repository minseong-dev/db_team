<!doctype html>
<html lang="en">
  <head>

    <!-- head -->
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>soccer</title>


  </head>
  <body>

    <!-- navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">HOME</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <% if(sess == null) { %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/user/signin">로그인</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page"><%= sess %>님</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/user/logout">로그아웃</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/myPage/main/<%= sess %>">마이페이지</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
</nav>

    <!-- view -->
    <!-- text -->
<div class='text-center'>
    <h1 class='display-1 mt-5 mb-4'>우리동네리그</h1>
</div>

<div class='container mt-5'>
  <img src='http://image.dongascience.com/Photo/2018/05/9540f8d3c30277c5db36bcaad8048e2a.jpg' width='100%' height='250px'>
</div>

    <!-- menutable -->
<div class='container mt-5'>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th style='width: 20%' height='50'>마이페이지</th>
                <th style='width: 20%'>팀</th>
                <th style='width: 20%' onClick="location.href='/league/leagueList'">리그</th>
                <th style='width: 20%'>게시판</th>
                <th style='width: 20%'>경기</th>
            </tr>
        </tbody>
    </table>
</div>

    <!-- recentgame -->
<div class='container mt-5'>
      <table class="table">
          <thead>
            <tr>
              <th scope="col" style='width: 30%'>경기일자</th>
              <th scope="col" style='width: 30%'>경기장소</th>
              <th scope="col" style='width: 15%'>#1</th>
              <th scope="col" style='width: 10%'></th>
              <th scope="col" style='width: 15%'>#2</th>
            </tr>
          </thead>
          <tbody>
          <% for(var i=0; i < recentGameList.length; i+=2){ %>
            <tr>
              <td style='vertical-align: middle'><%= recentGameList[i].game_date %></td>
              <td style='vertical-align: middle'><%= recentGameList[i].game_location %></td>
              <td style='vertical-align: middle'><%= recentGameList[i].team_name %></td>
              <td style='vertical-align: middle'>vs</td>
              <td style='vertical-align: middle'><%= recentGameList[i+1].team_name %></td>
            </tr>
          <%}%>
          </tbody>
      </table>
  </div>
    
    <!-- bot -->
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

