<!doctype html>
<html lang="en">
  <head>

    <!-- head -->
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>soccer</title>


  </head>
  <body>

    <!-- navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">HOME</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <% if(sess == null) { %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/user/signin">로그인</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page"><%= sess %>님</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/user/logout">로그아웃</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/myPage/main/<%= sess %>">마이페이지</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
</nav>

    <!-- league_info -->
    <div class='w-50 container mt-5'>
        <form action='/league/addLeague' method='post'>
          <div class="col-auto mb-3">
            <input type="text" name='league_name' class="form-control" placeholder="리그명" style='height: 50px';>
          </div>
          <div class="col-auto mb-3">
            <input type="text" name='user_id' class="form-control" placeholder="개최자" style='height: 50px' value=<%= sess %>>
          </div>
          <div class="col-auto mb-3">
            <input type="text" name='start_date' class="form-control" placeholder="시작일자 YYYY-MM-DD" style='height: 50px';>
          </div>
          <div class="col-auto mb-3">
            <input type="text" name='finish_date' class="form-control" placeholder="종료일자 YYYY-MM-DD" style='height: 50px';>
          </div>
          <div class="col-auto mb-3">
            <input type="text" name='game_type' class="form-control" placeholder="매칭방법" style='height: 50px';>
          </div>
          <div class="col-auto mb-3">
            <input type="text" name='league_local' class="form-control" placeholder="지역" style='height: 50px';>
          </div>
          <div class="col-auto">
            <button type="submit" class="w-100 btn btn-primary btn-lg" style='height: 65px';>리그 등록</button>
          </div>
        </form>
      </div>
    
    <!-- bot -->
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
