<!doctype html>
<html lang="en">
  <head>

    <!-- head -->
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>soccer</title>


  </head>
  <body>

    <!-- navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">HOME</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <% if(sess == null) { %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/user/signin">로그인</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page"><%= sess %>님</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/user/logout">로그아웃</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/myPage/main/<%= sess %>">마이페이지</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
</nav>

    <!-- leagueList -->
<div class='container mt-5'>
      <table class="table">
          <thead>
            <tr>
              <th scope="col" style='width: 30%'>No</th>
              <th scope="col" style='width: 30%'>리그명</th>
              <th scope="col" style='width: 15%'>개최자</th>
              <th scope="col" style='width: 10%'>기간</th>
              <th scope="col" style='width: 15%'>매칭방법</th>
            </tr>
          </thead>
          <tbody>
          <% for(let league of leagueList){ %>
            <tr>
              <td style='vertical-align: middle'><%= league.league_num %></td>
              <td style='vertical-align: middle'><%= league.league_name %></td>
              <td style='vertical-align: middle'><%= league.user_id %></td>
              <td style='vertical-align: middle'><%= league.start_date %> ~ <%= league.finish_date %></td>
              <td style='vertical-align: middle'><%= league.game_type %></td>
            </tr>
          <%}%>
          </tbody>
      </table>
      <button type="button" class="btn btn-primary" onclick="location.href='/league/addLeaguePage'">리그생성하기</button>
  </div>
    
    <!-- bot -->
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
